# WordAI Development Environment Configuration Template
# Copy this file to development.env and update with your actual values

# Firebase Configuration (wordai-6779e project)
FIREBASE_CREDENTIALS_FILE=firebase-credentials.json
FIREBASE_PROJECT_ID=wordai-6779e
FIREBASE_DATABASE_URL=https://wordai-6779e-default-rtdb.firebaseio.com/
FIREBASE_PRIVATE_KEY_ID=your_firebase_private_key_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@wordai-6779e.iam.gserviceaccount.com
FIREBASE_CLIENT_ID=your_firebase_client_id
FIREBASE_CLIENT_CERT_URL=https://www.googleapis.com/robot/v1/metadata/x509/firebase-adminsdk-fbsvc%40wordai-6779e.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="your_firebase_private_key_here"

# Alternative: Service Account File Path (if using file instead of env vars)
GOOGLE_APPLICATION_CREDENTIALS=firebase-credentials.json
FIREBASE_SERVICE_ACCOUNT_PATH=firebase-credentials.json

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Anthropic/Claude Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-haiku-4-5-20251001
CLAUDE_SONNET_MODEL=claude-sonnet-4-5-20250929

# Cerebras Configuration
CEREBRAS_API_KEY=your_cerebras_api_key_here

# DeepSeek Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=wordai_documents

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/wordai_db
MONGODB_DATABASE=wordai_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# R2 Storage (Cloudflare R2 for file storage)
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=wordai-documents
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://cdn.wordai.vn

# Application Configuration
APP_ENV=development
APP_DEBUG=true
APP_PORT=8000
APP_HOST=0.0.0.0

# Domain Configuration
FRONTEND_URL=https://ai.wordai.pro
BACKEND_URL=https://api.wordai.pro
ALLOWED_ORIGINS=https://ai.wordai.pro,https://www.wordai.pro,http://localhost:3000,http://localhost:8080

# Admin Configuration
ADMIN_SECRET_KEY=your_admin_secret_key_here
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration - Brevo (formerly Sendinblue)
BREVO_API_KEY=your_brevo_api_key_here
BREVO_SMTP_SERVER=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_LOGIN=your_smtp_login_here
BREVO_SENDER_EMAIL=noreply@wordai.pro
BREVO_SENDER_NAME=WordAI Notification

# Email Configuration (Legacy SMTP - Optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
CALLBACK_BASE_URL=https://api.wordai.pro

# AI Model Configuration
DEFAULT_AI_MODEL=gemini
FALLBACK_AI_MODEL=chatgpt
ENABLE_STREAMING=true

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/wordai.log

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# ============================================================================
# PAYMENT SERVICE CONFIGURATION (Node.js)
# ============================================================================

# SePay Payment Gateway Configuration
# Register at: https://sepay.vn
# Documentation: https://docs.sepay.vn
SEPAY_API_KEY=your_sepay_api_key_here
SEPAY_MERCHANT_CODE=your_sepay_merchant_code_here
SEPAY_SECRET_KEY=your_sepay_secret_key_here
SEPAY_API_URL=https://api.sepay.vn/v1
SEPAY_SANDBOX=true

# Inter-Service Authentication
# Used for Node.js â†’ Python communication (webhook activation)
API_SECRET_KEY=your_api_secret_key_here

# Docker Configuration
DOCKER_HUB_USERNAME=your_dockerhub_username
IMAGE_TAG=latest